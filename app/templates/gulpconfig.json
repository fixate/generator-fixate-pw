{
	"path": {
		"db_backup": "database",
		"dev": {
			"assets": "src/site/templates/assets",
			"css":    "src/site/templates/assets/css",
			"js":     "src/site/templates/assets/js",
			"img":    "src/site/templates/assets/img",
			"fnt":    "src/site/templates/assets/fnt",
			"scss":   "src/site/templates/assets/css/scss",
			"coffee": "src/site/templates/assets/js/coffee",
			"php":    "src/site/templates",
			"views":  "src/site/templates/views"
		},
		"prod": {
			"assets": "src/site/templates/assets/public",
			"css":    "src/site/templates/assets/public/css",
			"fnt":    "src/site/templates/assets/public/fnt",
			"img":    "src/site/templates/assets/public/img",
			"js":     "src/site/templates/assets/public/js"
		}
	},
	"plumber": {
		"errorHandler": false
	},
	"ssh": {
		"port": "22"
	},
	"rsync": {
		"up": {
			"dest": "public_html",
			"src": "./src/**",
				"exclude": [
				".git*",
				".DS_Store",
				"node_modules",
				"config-dev.php",
				".sass-cache",
				"*.scss",
				"*.css.map",
				"assets/css/style.css",
				"assets/js/main.js",
				"*.js.map",
				"*.coffee",
				"assets/cache",
				"assets/files",
				"assets/logs",
				"assets/sessions",
				"config.php",
				"robots.txt"
			]
		},
		"down": {
			"dest": "./src/site/assets/files",
			"src": "public_html/site/assets/files"
		}
	},
	"revManifest": {
		"path": "src/site/templates/assets/rev-manifest.json",
		"opts": {
			"merge": true
		}
	},
	"revReplace": {
		"opts": {
			"replaceInExtensions": [
				".js",
				".css"
			]
		}
	}
}
